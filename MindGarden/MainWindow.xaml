<Window x:Class="MindGarden.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MindGarden"
        mc:Ignorable="d"
        Title="Mind Garden" Height="800" Width="1280"
        WindowStartupLocation="CenterScreen"
        Background="#eaf7e5"
        WindowStyle="None"
        KeyDown="Window_KeyDown">
    <Grid>
        <Canvas Name="GardenCanvas" Background="#EAF7E5" MouseLeftButtonDown="GardenCanvas_MouseLeftButtonDown">
        </Canvas>
        <DockPanel VerticalAlignment="Top" Background="#cfe8cf" Height="40">
            <TextBlock x:Name="PlantCountText"
                       Margin="10,0"
                       VerticalAlignment="Center"
                       FontSize="16"
                       Text="Rośliny: 0"/>
        </DockPanel>

        <TextBlock x:Name="CalmMessageText"
                   VerticalAlignment="Bottom"
                   HorizontalAlignment="Center"
                   Margin="0,0,0,20"
                   FontSize="18"
                   Foreground="#445544"
                   Text=""
                   TextAlignment="Center"/>

        <Grid x:Name="MenuOverlay" Background="#80000000" Visibility="Visible">
            <Border Width="300"
                    Padding="20"
                    Background="#f3fff3"
                    CornerRadius="16"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center">
                <StackPanel>
                    <TextBlock Text="Mind Garden"
                               FontSize="24"
                               FontWeight="Bold"
                               Foreground="#334433"
                               HorizontalAlignment="Center"
                               Margin="0,0,0,10"/>
                    <Button x:Name="NewGameButton"
                            Content="Nowa gra"
                            Margin="0,5"
                            Padding="8"
                            Click="NewGameButton_Click"/>
                    <Button x:Name="ResumeButton"
                            Content="Wznów"
                            Margin="0,15,0,5"
                            Padding="8"
                            Click="ResumeButton_Click" Visibility="Collapsed"/>
                    <Button x:Name="ExitButton"
                            Content="Wyjdź"
                            Margin="0,15,0,0"
                            Padding="8"
                            Click="ExitButton_Click"/>

                </StackPanel>
            </Border>
        </Grid>
    </Grid>
</Window>
